<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1">
            <TextView
                android:text="@string/Loading_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="35sp"
                android:textStyle="bold|italic"
                android:layout_margin="10dp"
                android:textColor="@color/txt_color_blank"
                android:fontFamily="@string/txt_font"
                android:id="@+id/Book_Title_detail" />


   
            <ImageView
                android:src="@drawable/loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:transitionName="transition"
                android:id="@+id/img_detail" />
            
            <TextView
                android:text="@string/Loading_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textStyle="bold|italic"
                android:textColor="@color/txt_color_blank"
                android:fontFamily="@string/txt_font"
                android:id="@+id/Description_detail" />
            <TextView
                android:text="@string/Loading_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold|italic"
                android:textColor="@color/txt_color_blank"
                android:fontFamily="@string/txt_font"
                android:id="@+id/contributor_detail" />
            <TextView
                android:text="@string/Loading_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold|italic"
                android:textColor="@color/txt_color_blank"
                android:fontFamily="@string/txt_font"
                android:id="@+id/publisher_detail" />
            <TextView
                android:text="@string/Loading_txt"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textStyle="bold|italic"
                android:textColor="@color/txt_color_blank"
                android:fontFamily="@string/txt_font"
                android:id="@+id/AuthorBook_detail" />

        </LinearLayout>
    </ScrollView>
    <Button
        android:text="@string/Loading_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"

        android:fontFamily="@string/txt_font"
        android:id="@+id/buy_btn" />
    

</LinearLayout>
