<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/fragment_design"
        android:layout_height="wrap_content">
    
    
        <TextView
            android:text="Popular Panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="#007D98"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/title_Popular" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/linearLayout1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/linearLayout1">
                <TextView
                    android:text="Days Range"
                    android:layout_width="match_parent"
                    android:textColor="#007D98"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1" />

                <Spinner
                    android:layout_width="220dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/spinnet_layout"
                    android:layout_height="45dp"
                    android:id="@+id/spinner_days"
                   />
                <TextView
                    android:text="Topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#007D98"
            android:textStyle="bold"
                    android:id="@+id/textView2" />
                <Spinner
                    android:layout_width="220dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/spinnet_layout"
                    android:layout_height="45dp"
                    android:id="@+id/spinner_code"
               />

            </LinearLayout>

            <ImageButton           
                android:layout_margin="30dp"
                android:background="@drawable/btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/search_btn" />
        </LinearLayout>
    
    
    </LinearLayout>



    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/popular_layout"
            android:minWidth="25px"
            android:minHeight="25px">

        </LinearLayout>
    </ScrollView>



</LinearLayout>
