<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/panel2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Text 2"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:padding="15dp"
        android:textColor="@color/txt_color"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@string/txt_font"
        android:id="@+id/emailed_title_panel_2" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_gravity="center"
        android:id="@+id/frameLayout1">

        <ImageView
            android:src="@drawable/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="transition_main_page"
            android:id="@+id/emailed_img_2" />

    </androidx.cardview.widget.CardView>

    
    <TextView
        android:text="parag"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fontFamily="@string/txt_font"
        android:id="@+id/emailed_parag_panel_2" />


</LinearLayout>
