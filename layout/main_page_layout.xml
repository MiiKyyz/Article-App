<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1">

            <TextView
                android:text="@string/Home_page_title"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_design"
                android:padding="15dp"
                android:textColor="@color/txt_color"
                android:layout_gravity="center"
                android:fontFamily="@string/txt_font"
                android:id="@+id/textView1" />



            <ViewSwitcher
                android:id="@+id/view_switcher"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </ViewSwitcher>
            
            

            <TextView
                android:text="@string/Home_page_title_2"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_design"
                android:padding="15dp"
                android:textColor="@color/txt_color"
                android:layout_gravity="center"
                android:fontFamily="@string/txt_font"
                android:id="@+id/textView2" />


            <ViewSwitcher
                android:id="@+id/view_switcher_shared"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </ViewSwitcher>

            <TextView
                android:text="@string/Home_page_title_3"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_design"
                android:padding="15dp"
                android:textColor="@color/txt_color"
                android:layout_gravity="center"
                android:fontFamily="@string/txt_font"
                android:id="@+id/textView3" />


            <ViewSwitcher
                android:id="@+id/view_switcher_emailed"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </ViewSwitcher>


            <TextView
                android:text="@string/Home_page_title_4"
                android:textSize="20sp"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_design"
                android:padding="15dp"
                android:textColor="@color/txt_color"
                android:layout_gravity="center"
                android:fontFamily="@string/txt_font"
                android:id="@+id/textView4" />


            <ViewSwitcher
                android:id="@+id/view_switcher_viewed"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </ViewSwitcher>


            
        </LinearLayout>


    </ScrollView>


    



</LinearLayout>
